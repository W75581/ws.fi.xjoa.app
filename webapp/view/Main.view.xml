<mvc:View
    controllerName="ws.fi.xjoa.app.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    height="100%"
    xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:smartTable="sap.ui.comp.smarttable">

    <semantic:SemanticPage showFooter="{mdlForm>/ShowFooter}" busy="{mdlForm>/Busy}" busyIndicatorDelay="0"
		titleAreaShrinkRatio="1.6:1:1.6">

        <semantic:titleHeading>
            <Title text="{i18n>title}" />
        </semantic:titleHeading>

        <semantic:headerContent>
            <f:SimpleForm id="idMainForm" editable="true" layout="ColumnLayout" class="sapUiTinyMarginTopBottom">
                <f:content>

                    <Label text="{i18n>companyCode}" required="true"/>
                    <MultiInput id="idMulInpCompCode" required="true" value="{CompanyCode}" tokens="{path: 'mdlForm>/CompanyCodeVal'}" name="CompanyCode" suggestionRows="{/I_CompanyCode}"
                    tokenUpdate="onUpdateTokens" valueHelpRequest="onValueHelpRequested" suggestionItemSelected="onSuggestedItemSelected">
                        <tokens>
                            <Token key="{mdlForm>key}" text="{mdlForm>text}" />
                        </tokens>
                        <suggestionColumns>
                            <Column hAlign="Begin" popinDisplay="Inline" demandPopin="true">
                                <Label text="{i18n>companyCode}" />
                            </Column>
                            <Column hAlign="Begin" popinDisplay="Inline" demandPopin="true">
                                <Label text="{i18n>description}" />
                            </Column>
                        </suggestionColumns>
                        <suggestionRows>
                            <ColumnListItem>
                                <Label text="{CompanyCode}" />
                                <Label text="{CompanyCodeName}" />
                            </ColumnListItem>
                        </suggestionRows>
                    </MultiInput>

                    <Label text="{i18n>periodFisYr}" />
                    <ComboBox required="true" id="idComboBxFisYr" selectedKey="{mdlForm>/FiscalYear}" items="{path: '/ZFI_IQ_FISCAL_YEAR'}">
                        <core:ListItem key="{FiscalYear}" text="{FiscalYear}" />
                        <layoutData>
                            <f:ColumnElementData cellsLarge="4" cellsSmall="6" />
                        </layoutData>
                    </ComboBox>
                    <ComboBox required="true" id="idComboBxFisYrPrd" selectedKey="{mdlForm>/Period}" items="{path: '/ZFI_IQ_FY_PERIOD'}">
                        <core:ListItem key="{FiscalPeriod}" text="{FiscalPeriod}" />
                    </ComboBox>

                    <Label text="{i18n>docNo}" />
                    <MultiInput id="idMulInpDocNo" value="{FIDocumentNumber}" tokens="{path: 'mdlForm>/FIDocNoVal'}" name="FIDocumentNumber"
                    tokenUpdate="onUpdateTokens" valueHelpOnly="true" valueHelpRequest="onMultipleConditionsVHRequested">
                        <tokens>
                            <Token key="{mdlForm>key}" text="{mdlForm>text}" />
                        </tokens>
                    </MultiInput>

                    <Label text="{i18n>postType}" />
                    <RadioButtonGroup id="idRBGPostType" columns="2" select="selectPostType">
                        <RadioButton text="{i18n>radioFI}" class="sapUiMediumMarginEnd" selected="true" />
                        <RadioButton text="{i18n>radioCO}" />
                    </RadioButtonGroup>

                    <Label text="{i18n>postDate}" />
                    <DatePicker id="idMulInpPstDte" placeholder="{i18n>plceHldrPostDte}" change="handlePostDateChg" 
                        value="{
                            'type': 'sap.ui.model.type.Date',
                            'path': 'mdlForm>/PostingDate',
                            'formatOptions': {
                                'pattern': 'dd/MM/y'
                            }
                        }" 
                    />

                    <Label text="{i18n>docDate}" />
                    <DatePicker id="idMulInpDocDte" placeholder="{i18n>plceHldrPostDte}" change="handlePostDateChg" 
                        value="{
                            'type': 'sap.ui.model.type.Date',
                            'path': 'mdlForm>/DocumentDate',
                            'formatOptions': {
                                'pattern': 'dd/MM/y'
                            }
                        }" 
                    />

                    <Label text="{i18n>reportOnly}" />
                    <CheckBox id="idCBRprtOnly" selected="{mdlForm>/Report}" />

                </f:content>
            </f:SimpleForm>
            <HBox alignItems="Start" justifyContent="End" class="sapUiTinyMarginTopBottom">
				<Button text="{i18n>simulate}" class="sapUiSmallMarginEnd" type="Emphasized" press="onSimulateForm" />
                <Button text="{i18n>clear}" type="Transparent" press="onClearForm" />
			</HBox>
        </semantic:headerContent>

        <semantic:content>
            <smartTable:SmartTable
                class="sapUiSmallMargin"
                id="idMainTable"
                entitySet="Adjustment"
                tableType="Table"
                beforeExport="onBeforeExport"
                useTablePersonalisation="false"
                header="Items"
                showRowCount="true"
                showVariantManagement="false"
                persistencyKey="SmartTableAnalytical_Explored"
                enableAutoColumnWidth="true"
                beforeRebindTable="onBeforeRebindTable"
                initialNoDataText="{i18n>initialNoDataText}">

                <smartTable:customToolbar>
                    <OverflowToolbar design="Transparent">
                        <ToolbarSpacer />
                        <OverflowToolbarButton  tooltip="{i18n>printOut}" icon="sap-icon://pdf-attachment" enabled="{mdlForm>/PrintOut}"
                            press="onPDFDisplay" />
                    </OverflowToolbar>
                </smartTable:customToolbar>

                <table:Table alternateRowColors="true" selectionMode="None" threshold="0" visibleRowCountMode="Auto" />
            </smartTable:SmartTable>
        </semantic:content>

        <semantic:footerMainAction>
            <semantic:FooterMainAction text="{i18n>confirmPost}" press="onConfirmPost" enabled="{mdlForm>/ShowFooter}" />
        </semantic:footerMainAction>

    </semantic:SemanticPage>
</mvc:View>
