<mvc:View
    controllerName="ws.fi.xjoa.app.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Page id="page" title="{i18n>title}">
        <content>
            <f:SimpleForm id="idMainForm" class="sapUiSmallMarginEnd" editable="true" layout="ResponsiveGridLayout" labelSpanXL="2" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="true" emptySpanXL="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false">
                <f:content>
                    <core:Title text="" />
                    <Label text="{i18n>companyCode}" required="true"/>
                    <MultiInput id="idMulInpCompCode" required="true" value="{CompanyCode}" tokens="{path: 'mdlForm>/CompanyCodeVal'}" name="CompanyCode" suggestionRows="{/I_CompanyCode}"
                    tokenUpdate="onUpdateTokens" valueHelpRequest="onValueHelpRequested" suggestionItemSelected="onSuggestedItemSelected">
                        <tokens>
                            <Token key="{mdlForm>key}" text="{mdlForm>text}" />
                        </tokens>
                        <suggestionColumns>
                            <Column hAlign="Begin" popinDisplay="Inline" demandPopin="true">
                                <Label text="{i18n>companyCode}" />
                            </Column>
                            <Column hAlign="Begin" popinDisplay="Inline" demandPopin="true">
                                <Label text="{i18n>description}" />
                            </Column>
                        </suggestionColumns>
                        <suggestionRows>
                            <ColumnListItem>
                                <Label text="{CompanyCode}" />
                                <Label text="{CompanyCodeName}" />
                            </ColumnListItem>
                        </suggestionRows>
                    </MultiInput>
                    <Label text="{i18n>periodFisYr}" />
                    <ComboBox required="true" id="idComboBxFisYr" selectionChange="onSelFiscalYear" selectedKey="{mdlForm>/FiscalYear}" items="{path: '/I_FiscalYear'}">
                        <core:ListItem key="{FiscalYear}" text="{FiscalYear}" />
                        <layoutData>
                            <l:GridData span="XL4 L4 M4 S4" />
                        </layoutData>
                    </ComboBox>
                    <MultiComboBox required="true" id="idComboBxFisYrPrd" selectedKeys="{mdlForm>/Period}" items="{path: '/I_FiscalYearPeriod'}">
                        <core:ListItem key="{FiscalPeriod}" text="{FiscalPeriod}" />
                    </MultiComboBox>
                    <Label text="{i18n>postType}" />
                    <RadioButtonGroup id="idRBGPostType" columns="2" select="selectPostType">
                        <RadioButton text="{i18n>radioFI}" class="sapUiMediumMarginEnd" selected="true" />
                        <RadioButton text="{i18n>radioCO}" />
                    </RadioButtonGroup>
                    <Label text="{i18n>reportOnly}" />
                    <CheckBox id="idCBRprtOnly" selected="{mdlForm>/Report}" />
                    <core:Title text="" />
                    <Label text="{i18n>postDate}" />
                    <DatePicker id="idMulInpPstDte" placeholder="{i18n>plceHldrPostDte}" change="handlePostDateChg" 
                        value="{
                            'type': 'sap.ui.model.type.Date',
                            'path': 'mdlForm>/PostingDate',
                            'formatOptions': {
                                'pattern': 'dd/MM/y'
                            }
                        }" 
                    />
                    <Label text="{i18n>docDate}" />
                    <DatePicker id="idMulInpDocDte" placeholder="{i18n>plceHldrPostDte}" change="handlePostDateChg" 
                        value="{
                            'type': 'sap.ui.model.type.Date',
                            'path': 'mdlForm>/DocumentDate',
                            'formatOptions': {
                                'pattern': 'dd/MM/y'
                            }
                        }" 
                    />
                    <Label text="{i18n>docNo}" />
                    <!-- <MultiInput id="idInpDocNo" value="{mdlForm>/FIDocumentNumber}" valueHelpOnly="true" valueHelpRequest="onMultipleConditionsVHRequested"/> -->
                    <MultiInput id="idMulInpDocNo" value="{FIDocumentNumber}" tokens="{path: 'mdlForm>/FIDocNoVal'}" name="FIDocumentNumber"
                    tokenUpdate="onUpdateTokens" valueHelpOnly="true" valueHelpRequest="onMultipleConditionsVHRequested">
                        <tokens>
                            <Token key="{mdlForm>key}" text="{mdlForm>text}" />
                        </tokens>
                    </MultiInput>
                </f:content>
            </f:SimpleForm>
            <HBox justifyContent="End" class="sapUiSmallMargin">
                <Button text="{i18n>simulate}" class="sapUiSmallMarginEnd" type="Emphasized" press="onSimulateForm" />
                <Button text="{i18n>clear}" type="Transparent" press="onClearForm" />
            </HBox>
            <smartTable:SmartTable
                class="sapUiSmallMargin"
                id="idMainTable"
                entitySet="Adjustment"
                tableType="Table"
                enableExport="true"
                beforeExport="onBeforeExport"
                useTablePersonalisation="true"
                header="Items"
                showRowCount="true"
                showVariantManagement="false"
                persistencyKey="SmartTableAnalytical_Explored"
                enableAutoColumnWidth="true"
                beforeRebindTable="onBeforeRebindTable"
                initialNoDataText="{i18n>initialNoDataText}">
                <Table sticky="ColumnHeaders" popinLayout="GridSmall" alternateRowColors="true" selectionChange="handleItemSelection" rememberSelections="false" />
            </smartTable:SmartTable>
        </content>
        <footer>
			<OverflowToolbar visible="{=!${mdlForm>/Report}}">
				<ToolbarSpacer/>
				<Button type="Emphasized" text="{i18n>confirmPost}" press="onConfirmPost"/>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>
